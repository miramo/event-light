{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "typeRoots" : ["./src/typings/", "./node_modules/@types/"],
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "removeComments": true,
    "lib": ["es2017"],
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}